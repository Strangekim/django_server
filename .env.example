# ========================================
# Django 설정
# ========================================
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=

# ========================================
# 데이터베이스 (PostgreSQL)
# ========================================
# 형식: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://admin:secret@127.0.0.1:5432/mydb

# ========================================
# AWS S3 (이미지 저장소)
# ========================================
AWS_S3_REGION_NAME=ap-northeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# ========================================
# Mathpix OCR API
# ========================================
# 문제 이미지 OCR 처리에 사용
# https://mathpix.com/ 에서 발급
MATHPIX_APP_ID=your-mathpix-app-id
MATHPIX_APP_KEY=your-mathpix-app-key

# ========================================
# OpenAI API
# ========================================
# 문제 구조화 및 풀이 검증에 사용
# https://platform.openai.com/ 에서 발급
OPENAI_API_KEY=sk-your-openai-api-key

# ========================================
# GitHub Issue 자동화
# ========================================
# GitHub Personal Access Token (repo 권한 필요)
# Settings > Developer settings > Personal access tokens 에서 생성
GITHUB_TOKEN=ghp_your_github_personal_access_token

# GitHub 저장소 정보
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=django_server
